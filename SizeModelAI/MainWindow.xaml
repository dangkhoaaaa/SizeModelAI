<Window x:Class="SizeModelAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clothing Size Prediction" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

       
        <!--<Button Grid.Row="0" Width="100" Height="30" Margin="10" Click="LoadImage_Click">Load Image</Button>-->
        <Button Grid.Row="0" Width="100" Height="30" Margin="10" Click="LoadImageAI_Click">Load Image</Button>

      
        <ComboBox x:Name="questionComboBox" Grid.Row="1" Width="200" Margin="10">
            <ComboBoxItem>What is this picture?</ComboBoxItem>
            <ComboBoxItem>How many people are in this picture?</ComboBoxItem>
            <ComboBoxItem>Predict clothing size for the person in this picture</ComboBoxItem>
        </ComboBox>

      
        <Image x:Name="imageView" Grid.Row="2" Margin="10" Stretch="Uniform"/>

    </Grid>
</Window>
