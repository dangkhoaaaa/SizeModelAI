<Window x:Class="SizeModelAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Clothing Size Prediction" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nút để tải hình ảnh -->
        <Button Grid.Row="0" Width="100" Height="30" Margin="10" Click="LoadImage_Click">Load Image</Button>

        <!-- Hiển thị hình ảnh -->
        <Image x:Name="imageView" Grid.Row="1" Margin="10" Stretch="Uniform"/>
      
    </Grid>
</Window>
